{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/xiaoyanshu1999/Assignment2_Yifan/main/Data/DomesticTouristVisits.csv"
  },
  "background": {
    "expr": "null"
  },
  "resolve": {
    "scale": {
      "color": "independent"
    }


  },

  "layer": [{
      "mark": "bar",
      "transform": [{
        "filter": "isValid(datum.Tourists)"
      }],
      "encoding": {
        "x": {
          "field": "Tourists",
          "type": "quantitative",
          "title": " Domestic tourist visits in India",
          "axis": {
            "tickCount": 6
          },
          "stack": "zero"
        },
        "y": {

          "field": "Year"

        },
        "color": {}
      }

    },

    {
      "mark": {
        "type": "text",
        "dx": -18,
        "dy": 1
      },

      "encoding": {

        "x": {
          "field": "Tourists",
          "type": "quantitative",
          "stack": "zero"
        },

        "y": {
          "field": "Year",
          "type": "nominal"
        },

        "color": {
          "field": "site",
          "type": "nominal",
          "scale": {
            "range": ["white"]
          },
          "legend": null
        },

        "text": {
          "field": "Tourists",
          "type": "quantitative",
          "format": ".1f"
        }
      }
    }
  ],




  "config": {

    "axis": {
      "labelPadding": 2,
      "labelFont": "Mukta",
      "titleFont": "Mukta"
    },
    "legend": {
      "labelFont": "Mukta",
      "titleFont": "Mukta"
    },
    "header": {
      "labelFont": "Mukta",
      "titleFont": "Mukta"
    },
    "mark": {
      "font": "Mukta"
    },
    "title": {
      "font": "Mukta",
      "subtitleFont": "Mukta"
    }


  }
}